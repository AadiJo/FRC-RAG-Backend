# Backend Environment Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# Server Settings
# ============================================================================
ENVIRONMENT=production
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
DEBUG=false

# ============================================================================
# Ollama Settings
# ============================================================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_TIMEOUT=30

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=1

# ============================================================================
# Database Settings
# ============================================================================
CHROMA_PATH=db
IMAGES_PATH=data/images

# ============================================================================
# Security Settings
# ============================================================================
API_KEY_REQUIRED=false
VALID_API_KEYS=

# ============================================================================
# Logging Settings
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# ============================================================================
# CORS Settings
# ============================================================================
CORS_ORIGINS=*

# ============================================================================
# Model Provider Settings  
# ============================================================================
# Model provider: 'local' for Ollama, 'chute' for Chutes AI
MODEL_PROVIDER=local
CHUTES_API_TOKEN=
# Show model reasoning/thinking process (for debugging)
SHOW_MODEL_REASONING=false

# ============================================================================
# Performance Settings
# ============================================================================
MAX_CONTENT_LENGTH=16777216

# ============================================================================
# Tunneling Settings (Optional)
# ============================================================================
# Options: ngrok, cloudflare, or leave empty
TUNNEL_SERVICE=
NGROK_AUTH_TOKEN=
CLOUDFLARE_TUNNEL_TOKEN=
